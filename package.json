{
  "name": "pw-bdd-automation",
  "version": "1.0.0",
  "description": "Run Gherkin feature files directly with Playwright, supports retries, screenshots, video, HTML report, parallel execution, tags and background steps.",
  "main": "index.js",
  "scripts": {
    "test": "npx ts-node run-tests.ts",
    "test:dev": "npx ts-node run-tests.ts -env=dev",
    "test:int": "npx ts-node run-tests.ts —env=int",
    "test:qa": "npx ts-node run-tests.ts --env=qa",
    "test:smoke": "npx ts-node - run-tests.ts —tags=smoke",
    "test:smoke: dev": "npx ts-node run-tests.ts —-env=dev -—tags=smoke",
    "test:smoke: int": "npx ts-node run-tests.ts --env=int --tags=smoke",
    "test:smoke: qa": "npx ts-node run-tests.ts —env=qa —-tags=smoke",
    "test:single: dev": "npx ts-node run-tests.ts —single -—env=dev",
    "test:single: int": "npx ts-node-run-tests.ts —single -—env=int",
    "test:single: qa": "npx ts-node run-tests.ts single —-env=qa",
    "test:headed": "HEADLESS=false npx ts-node run-tests.ts -—env=qa",
    "report": "npx-ts-node generate-html-report.ts",
    "build": "tsc",
    "clean": "rimraf dist test-results",
    "Lint": "eslint src/**/*.ts"
  },
  "keywords": [
    "playwright",
    "bad",
    "gherkin",
    "automation",
    "testing",
    "feature-files",
    "parallel",
    "html-report"
  ],
  "dependencies": {
    "@playwright/test": "^1.57.0",
    "p-limit": "^7.2.0",
    "glob": "^13.0.0",
    "yargs": "^18.0.0",
    "dotenv": "^17.2.3",
    "axios": "^1.13.2",
    "moment-timezone": "^0.6.0",
    "otpauth": "^9.4.1",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "ts-node": "^10.9.1",
    "@types/node": "^20.4.1",
    "eslint": "^9.39.2",
    "rimraf": "^6.1.2"
  },
  "author": "vsbathula@outlook.com",
  "License": "MIT"
}
